# file location: ~/.gitconfig

[include]
	path = ~/.config/delta/themes/catppuccin.gitconfig
[includeIf "gitdir/i:~/"]
  path = ~/.gitconfig.inc
[includeIf "gitdir/i:~/.dotfiles/"]
  path = ~/.gitconfig-personal.inc
[includeIf "gitdir/i:~/dev/dnitros/"]
  path = ~/.gitconfig-personal.inc
[alias]
  cc = "!echo \"Size before: $(du -sh .git | cut -f1)\"; git remote prune origin; git repack; git prune-packed; git reflog expire --all --expire=1.week.ago; git maintenance run --task=gc; echo \"Size after: $(du -sh .git | cut -f1)\";"
  committers = shortlog -s --
  dangling = fsck --no-reflog
  # delete local branch
  dlb = "!git branch -vv | GREP_OPTIONS= grep ': gone]' | awk '{print $1}' | xargs -I {} git branch -D {}"
  find = "!git ls-files | GREP_OPTIONS=\"--color=auto\" grep -i"
  what = show -s --pretty='tformat:%h (%s, %ad)' --date=short
  who = !git config --get user.name && git config --get user.email
[branch]
  autosetupmerge = true
  autosetuprebase = always
[bulkworkspaces]
  dnitros = /Users/digvijaysingh/dev/dnitros
[checkout]
  defaultRemote = origin
[color]
  interactive = auto
  pager = true
  ui = auto
[color "branch"]
  current = yellow bold
  local = green bold
  remote = cyan bold
[color "diff"]
  frag = magenta bold
  meta = yellow bold
  new = green bold
  old = red bold
  whitespace = red reverse
[color "status"]
  added = green bold
  changed = yellow bold
  untracked = red bold
[core]
  autocrlf = input
  commentChar = *
  editor = vi
  excludesFile = ~/.gitignore_global
  pager = delta
  whitespace = fix
[delta]
  features = catppuccin-mocha
  side-by-side = true
  true-color = always
[diff]
  colorMoved = default
[fetch]
  all = true
  parallel = 0
  prune = true
  pruneTags = true
[filter "lfs"]
  clean = git-lfs clean -- %f
  process = git-lfs filter-process
  required = true
  smudge = git-lfs smudge -- %f
[gc]
  pruneexpire = now
[grep]
  extendedRegexp = true
  lineNumber = true
  fullName = true
[gui]
  matchtrackingbranch = true
  pruneduringfetch = true
  tabsize = 2
  warndetachedcommit = true
[help]
  autocorrect = immediate
[init]
  defaultBranch = main
[interactive]
  diffFilter = delta --color-only
[log]
  abbrevCommit = true
  showSignature = true
[merge]
  autoStash = true
  conflictstyle = diff3
  defaultToUpstream = true
  ff = only
  renamelimit = 15000
[pager]
  diff = delta
  log = delta
  show = delta
[pull]
  autoStash = true
  rebase = true
[push]
  default = upstream
  followTags = true
[rebase]
  abbreviateCommands = true
  autoSquash = true
  autoStash = true
  missingCommitsCheck = error
[rerere]
  enabled = true
  autoUpdate = true
[sequence]
  editor = interactive-rebase-tool
[stash]
  showIncludeUntracked = true
  showPatch = true
[status]
  showStash = true
  showUntrackedFiles = all
[tag]
  sort = version:refname
[user]
  useConfigOnly = true
